\leftheader{%
  \ifdef{\@author}{\@author\newline}{}%
  \ifdef{\@address}{\@address\newline}{}%
  \ifdef{\@city}{\ifdef{\@postal}{\@postal}{}~\@city\newline}{}%
  \ifdef{\@country}{\@country\newline}{}%
  \ifdef{\@birth}{\@birth\newline}{}%
